{
	"name": "behringer-x32",
	"legacy": [
		"x32"
	],
	"version": "2.7.2",
	"api_version": "1.0.0",
	"keywords": [
		"Audio"
	],
	"manufacturer": "Behringer/Midas",
	"product": "X32/M32",
	"shortname": "x32",
	"description": "Module for controling the Midas M32 and Behringer X32 consoles",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky install",
		"dev": "yarn build:watch",
		"build": "npx rimraf dist && npx typescript@~4.2 -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint --ext .ts --ext .js --ignore-pattern dist",
		"lint": "yarn lint:raw .",
		"lint-fix": "yarn lint --fix",
		"license-validate": "yarn sofie-licensecheck",
		"postinstall": "yarn build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-behringer-x32.git"
	},
	"author": "Julian Waller <julian@superfly.tv>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/bitfocus/companion-module-behringer-x32/issues"
	},
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^14"
	},
	"dependencies": {
		"@types/node": "^14.18.4",
		"debounce-fn": "https://github.com/Julusian/debounce-fn.git",
		"p-queue": "^6.6.2",
		"type-fest": "^2.8.0"
	},
	"devDependencies": {
		"@sofie-automation/code-standard-preset": "^0.5.1",
		"typescript": "~4.2"
	}
}
