{
	"name": "behringer-x32",
	"version": "3.0.0-0",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"dev": "yarn build:main --watch",
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"lint:raw": "eslint --ext .ts --ext .js --ignore-pattern dist --ignore-pattern pkg",
		"lint": "yarn lint:raw .",
		"dist": "yarn companion-module-build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-behringer-x32.git"
	},
	"license": "MIT",
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^14 || ^16"
	},
	"dependencies": {
		"@companion-module/base": "~0.4.3",
		"date-fns": "^2.28.0",
		"debounce-fn": "^5.1.2",
		"debug": "^4.3.4",
		"osc": "^2.4.3",
		"p-queue": "^7.2.0",
		"type-fest": "^2.16.0"
	},
	"devDependencies": {
		"@companion-module/tools": "^0.3.1",
		"@types/debug": "^4.1.7",
		"@types/node": "^14.18.21",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"rimraf": "^3.0.2",
		"typescript": "~4.5"
	}
}
